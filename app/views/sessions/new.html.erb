<h1>Login</h1>

<%= form_with(url: 'login', method: 'post') do |form| %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>
<%= link_to "Back to home", root_path %>


